{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-unused-vars": [
            "off"
        ],
        "no-empty": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "curly": [
            "warn"
        ],
        "no-eval": [
            "warn"
        ],
        "no-implied-eval": [
            "warn"
        ],
        "no-multi-spaces": [
            "warn",
            {
                "exceptions": {
                    "VariableDeclarator": true,
                    "ImportDeclaration": true
                }
            }
        ],
        "no-new-wrappers": [
            "warn"
        ],
        "no-with": [
            "warn"
        ],
        "wrap-iife": [
            "warn",
            "inside"
        ],
        "init-declarations": [
            "warn",
            "always"
        ],
        "no-undef-init": [
            "warn"
        ],
        "no-undefined": [
            "warn"
        ],
        "brace-style": [
            "warn"
        ],
        "camelcase": [
            "warn"
        ],
        "comma-style": [
            "warn"
        ]
    }
}
